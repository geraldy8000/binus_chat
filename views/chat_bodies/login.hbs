<div class="body padding">
  <div class="logo-login"></div>
  <div class="bold-separator-fields"></div>
  <div class="bottom-section padding">
      <div class="w-form">
      <form action="/masuk" method="post" >
          <div>
          <label class="label-form" for="email-field">STUDENT ID</label>
          <input class="w-input input-form" name="uid" data-name="uid" required="required">
          <div class="separator-fields"></div>
          </div>
          <div>
          <label class="label-form" for="email">PASSWORD</label>
          <div class="w-clearfix block-input-combined">
              <input class="w-input input-form left" id="password-field" type="password" name="password" data-name="password" required="required">
          </div>
          <div class="separator-fields"></div>
          
          </div>
          <label class="warning-text">
          {{ text }}
          </label>
          <div class="separator-button-input"></div>
          <button class="w-button action-button" type="submit" value="Sign In" data-wait="Please wait...">Submit</button>
      </form>
      <div class="w-form-done">
          <p>Thank you! Your submission has been received!</p>
      </div>
      <div class="w-form-fail">
          <p>Oops! Something went wrong while submitting the form</p>
      </div>
      </div>
  </div>
</div>